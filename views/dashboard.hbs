
   <header>
        <div class="profile" style="padding-top: 5px;">
         <a href="/profile" data-profile><img src={{img}} width="40px" height="40px"></a>
        </div>
        {{> header}}
    </header>
   <div class="container" data-container>

  {{#if tasks}}
    {{#each tasks}}
         <div class="ui card" style="">
                <div class="ui top left attached label">tags</div>
                <div class="content">
                  <div class="task-header">
                    {{title}} <i class="fa fa-times blue" aria-hidden="true" data-delete-task="{{id}}"></i>
                      </div>
                  <div class="meta">{{createdAt}}</div>
                  <div class="description">
                      {{#if location}}
                    <p><strong>Location:</strong> {{location}}</p>
                      {{/if}}
                    <p><strong>Due:</strong> {{due}}</p>
                    <p><strong>Description:</strong> {{#partialContent content}}{{/partialContent}}</p>
                </div>
                  <a class="ui green right ribbon label">Donzo</a>
                <div class="ui two buttons">
                    <div class="ui basic green button">Done</div>
                    <div class="ui basic blue button" data-info={{id}}>More</div>
                    </div>
                </div>
              </div>
{{/each}}
{{else}} 
<h3 style="color: rgba(0,0,0,0.44)">You have no upcoming tasks yet.</h3>
{{/if}}
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.2.10/dist/semantic.min.js"></script>
<script src="../javascripts/dashboard.js"></script>

