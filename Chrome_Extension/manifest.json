{
    "manifest_version": 2,
  
    "name": "DigitalTasks",
    "description": "This extension allows the user to change the background color of the current page.",
    "version": "1.0",

    "content_scripts": [
      {
        "matches": ["https://*/*", "http://*/*"],
        "js": ["content-script.js"]
      }
    ],
  
    "browser_action": {
      "default_icon": "icon.png"
    },
    "background": {
      "scripts":["background.js"]
    },
    "permissions": [
      "activeTab",
      "storage"
    ]
  }