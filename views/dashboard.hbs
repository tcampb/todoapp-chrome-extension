
   <header>
        <div class="profile" style="padding-top: 5px;">
         <a href="/profile" data-profile><img src={{img}} width="40px" height="40px"></a>
        </div>
        {{> header}}
    </header>
   <div class="container" data-container>

<div class="ui floating dropdown labeled icon button" style="margin-left:5px">
  <i class="filter icon"></i>
  <span class="text">{{{spam}}}</span>
  <div class="menu">
      <div class="item" data-all-task>
        <i class="list layout icon"></i>
        All
      </div>
      <div class="item" data-filter-date>
        <i class="yellow calendar icon"></i>
        Date
      </div>
      <div class="item" data-overdue-task>
        <i class="red dont icon"></i>
        Overdue
      </div>
      <div class="item" data-completed-task>
        <i class="green check square icon"></i>
        Completed
      </div>
  </div>
</div>







  {{#if tasks}}
    {{#each tasks}}
              <a href="#" class="ui card" style="width: 100%" id="card">
                <div class="content">
                  <div class="task-header">
                    {{title}} <i class="fa fa-times blue" aria-hidden="true" data-delete-task="{{id}}"></i>
                      </div>
                  <div class="meta">{{createdAt}}</div>
                  <div class="description">
                      {{#if location}}
                    <p><strong>Location:</strong> {{location}}</p>
                      {{/if}}
                    <p><strong>Due:</strong> {{due}}</p>
                    <p><strong>Description:</strong> {{#partialContent content}}{{/partialContent}}</p>
                </div>
                <div class="ui green right ribbon label" style="margin-left: 25px; {{#unless status}} display:none {{/unless}}" data-ribbon="{{id}}">Complete</div>
                <div class="ui two buttons">
                    <div class="ui toggle basic green button">Done</div>
                    <div class="ui basic blue button" data-info={{id}}>More</div>
                    </div>
                </div>
              </a>
{{/each}}
{{else}} 
<h3 style="color: rgba(0,0,0,0.44)">You have no upcoming tasks yet.</h3>
{{/if}}
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.2.10/dist/semantic.min.js"></script>
<script src="../javascripts/dashboard.js"></script>

